<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="520.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.LoginController"
            stylesheets="@style.css" styleClass="login-root">

    <center>
        <VBox alignment="CENTER" spacing="18.0" styleClass="card">
            <Label styleClass="header" text="تسجيل الدخول" />
            <VBox alignment="CENTER" spacing="10.0">
                <TextField fx:id="emailField" maxWidth="300.0" promptText="البريد الإلكتروني" />
                <PasswordField fx:id="passwordField" maxWidth="300.0" promptText="كلمة المرور" />
            </VBox>
            <VBox alignment="CENTER" spacing="10.0">
                <Button fx:id="loginButton" onAction="#handleLogin" text="تسجيل الدخول" styleClass="btn-accent" />
                <Button fx:id="signupButton" onAction="#navigateToSignUp" text="إنشاء حساب جديد" styleClass="btn-muted" />
            </VBox>
            <padding><Insets left="24" right="24" top="8" bottom="8"/></padding>
        </VBox>
    </center>
    <padding><Insets bottom="20" left="20" right="20" top="20"/></padding>
</BorderPane>
